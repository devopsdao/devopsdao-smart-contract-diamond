{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Hardhat deploy",
        "program": "${workspaceFolder}/scripts/deploy.js",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node",
        "runtimeExecutable": "${workspaceFolder}/npx hardhat",
        "args": ["run", "./scripts/new-byot-garden.ts", "--network", "moonbase"],
        "cwd": "${workspaceFolder}/packages/hardhat"
    },
    {
        "args": [
            // "-u",
            // "tdd",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/test"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node"
    },
    {
        "name": "mint nfts",
        "program": "${workspaceFolder}/scripts/mint-nfts.js",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node",
        // "runtimeArgs": ["--expermimental-fetch"]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat test",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["test", "--network", "tanssiSnap"],
        "cwd": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat nftMint",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["nftMint", "--accounts", "2", "--names", "dodao,LFD", "--receivers", "0x23F59AE0cE190e566852595e152B86017132B7Ef,0x386f96C86D9C04786a1c8cd059f53298e27d47b7", "--network", "tanssiSnap"],
        "cwd": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat diamondDeploy",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["diamondDeploy", "--network", "localhost"],
        "cwd": "${workspaceFolder}",
        "sourceMaps": true
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat diamondUpgrade",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["diamondUpgrade", "--facets", "all", "--network", "localhost"],
        "cwd": "${workspaceFolder}",
        "sourceMaps": true
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat witnetConfig",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["witnetConfig", "--network", "moonbase"],
        "cwd": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat witnetQuery",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["witnetQuery", "--network", "mumbai"],
        "cwd": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat witnetRead",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["witnetRead", "--network", "mumbai"],
        "cwd": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "npx rad2sol",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/rad2sol",
        "args": ["--write-contracts"],
        "cwd": "${workspaceFolder}"
    },
    ]
}