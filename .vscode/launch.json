{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Hardhat deploy",
        "program": "${workspaceFolder}/scripts/deploy.js",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node",
        "runtimeExecutable": "${workspaceFolder}/npx hardhat",
        "args": ["run", "./scripts/new-byot-garden.ts", "--network", "moonbase"],
        "cwd": "${workspaceFolder}/packages/hardhat"
    },
    {
        "args": [
            // "-u",
            // "tdd",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/test"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node"
    },
    {
        "name": "mint nfts",
        "program": "${workspaceFolder}/scripts/mint-nfts.js",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node",
        // "runtimeArgs": ["--expermimental-fetch"]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat test",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "npx hardhat",
        "args": ["test", "--network", "localhost"],
        "cwd": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat diamondUpgrade",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["diamondUpgrade", "--facets", "WitnetFacet", "--network", "mumbai"],
        "cwd": "${workspaceFolder}"
    },  
    {
        "type": "node",
        "request": "launch",
        "name": "hardhat witnetConfig",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["witnetConfig", "--network", "mumbai"],
        "cwd": "${workspaceFolder}"
    },  
    ]
}